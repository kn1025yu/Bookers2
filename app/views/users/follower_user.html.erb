<h1>Follower Users</h1>
<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
    </tr>
  </thead>
  <table>
    <thead>
      <tr>
        <% @user.followers.each do |user| %>
        <th>
          <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %>
        </th>
        <th><%= user.name %></th>
        <th><%= "フォロー数: #{@user.followings.count}" %></th>
        <th><%= "フォロワー数: #{@user.followers.count}" %></th>
        <th><%= link_to 'Show', user_path(user) %></th>
        <% end %>
      </tr>
    </thead>
  </table>