<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_with model:@user, local:true do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.email_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "60x60" %>
  <label for="inputImage">Image</label>
  <%= f.attachment_field :profile_image, placeholder: "Image" %>

  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>

<% end %>
<%= link_to "Back", :back %>
