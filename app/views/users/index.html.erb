  <h2>Book detail</h2>
  <table class="table-hover table-inverse">
   <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
   </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
           <%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", format: 'jpeg', size: "60x60" %>
          </td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
          <% if book.user == current_user %>
            <td>
             <%= link_to 'Edit', book_path(book), class: 'btn btn-success btn-sm btn-block mb-3 edit' %>
            </td>
            <td>
              <%= link_to 'Destroy', book_path(book), class: 'btn btn-danger btn-sm btn-block mb-3 destroy', method: :delete, "data-confirm" => "本当に削除しますか？" %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
