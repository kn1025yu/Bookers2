  <div>
    <a class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user" href="/users/edit"></a>
  </div>

  <h2 class="mt-3">New book</h2>
  <%= form_with model:@book, local:true do |f| %>

  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>

