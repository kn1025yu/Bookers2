<div class="col-md-3">
  <h2>User info</h2>
    <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %>
    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
	        <th><%= user.name %></th>
	      </tr>
	      <tr>
	        <th>introduction</th>
	        <th><%= user.introduction %></th>
	      </tr>
	      <tr>
	        <th>follows</th>
	        <th>
	          <%= link_to followings_user_path(user) do %>
              <%= user.followings.count %>
            <% end %>
          </th>
        </tr>
        <tr>
          <th>followers</th>
          <th>
            <%= link_to followers_user_path(user) do %>
              <%= user.followers.count %>
            <% end %>
          </th>
        </tr>
      </tbody>
    </table>
    <div>
      <% if current_page?(books_path) %>
        <%= render 'relationships/follow_button', user: user %>
      <% else %>
        <%= link_to edit_user_path(user.id), class:"btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
      <% end %>
      <% end %>
    </div>

  <h2 class="mt-3">New book</h2>
  <%= form_with model: book, local:true do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book', class: 'btn btn-success btn-sm btn-block mb-3' %>
  <% end %>
</div>
