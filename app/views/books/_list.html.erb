<%= render 'books/list', books:@books %>
<div class="col-md-3">
  <h2>User info</h2>
  <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %>
  <table class="row">
  <tbody>
    <tr>
      <th>name</th>
	    <th><%= @user.name %></th>
	    <th>introduction</th>
	    <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>
<div>
  <a class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user" href="/users/edit"></a>
</div>

<h2 class="mt-3">New book</h2>
<%= form_with model:@book, local:true do |f| %>
  <h4>title</h4>
    <%= f.text_field :title %>
  <h4>opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>
</div>
