<div class="container px-5 px-sm-0">
  <%= flash[:notice] %>
  <%= flash[:alert] %>
  <div class="row">

  <%= render 'books/list', book: @book1, user: @user %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Book</th>
            <th>detail</th>
          </tr>
        </thead>

        <tbody>
          <tr>
        　  <td>
        　     <%= link_to user_path(@book.user.id) do %>
        　     <%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
              <% end %>
        　   </td>
            <td>
              <%= link_to @book.user.name, user_path(@book.user.id) %>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td>
               <%= link_to 'Edit', edit_book_path(@book.id), class: 'btn btn-success btn-sm btn-block mb-3' %>
              </td>
              <td>
                <%= link_to 'Destroy', book_path(@book.id), class: 'btn btn-danger btn-sm btn-block mb-3', method: :delete %>
              </td>
            <% end %>
            <td class="favorite-btn"><%= render "favorites/favorites", book: @book %></td>
            <td>コメント数: <%= @book.book_comments.count %></td>
          </tr>
        </tbody>
        <% @book.book_comments.each do |book_comment| %>
          <% book_comment_user = book_comment.user %>
          <tr>
    	      <td>
    		      <%= link_to user_path(book_comment_user), class: "user_#{book_comment_user.id}" do %>
      		      <%= attachment_image_tag book_comment_user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %><br>
      		      <%= book_comment_user.name %>
    		      <% end %>
    	      </td>
    	      <td><%= book_comment.comment %></td>
    	      <% if current_user == book_comment_user %>
      	    <td><%= link_to 'Destroy', book_book_comment_path(book_comment.book_id, book_comment.id), class: 'btn-sm btn-danger', method: :delete %></td>
    	      <% end %>
          </tr>
        <% end %>
      </table>
      <table>
        <%= form_with model:[@book,@book_comment], local:true do |f| %>
          <%= f.text_area :comment, size:"90x5" %><br>
          <%= f.submit '送信'%>
        <% end %>
      </table>
    </div>
  </div>
</div>