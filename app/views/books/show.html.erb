<div class="col-md-3">
  <h2>User info</h2>
  <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %>
  <table class="row">
  <tbody>
    <tr>
      <th>name</th>
	    <th><%= @user.name %></th>
	    <th>introduction</th>
	    <th><%= @user.name %></th>
    </tr>
  </tbody>
</table>
<div>
  <a class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user" href="/users/edit"></a>
</div>

<h2 class="mt-3">New book</h2>
<%= form_with model:@book, local:true do |f| %>
  <h4>title</h4>
    <%= f.text_field :title %>
  <h4>opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>
</div>

<div class="col-md-9">
  <h2>Books</h2>
  <table>
   <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
   </thead>

    <tbody>
        <tr>
          <td>
            <%= @book.user.name%>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
          <td>
           <%= link_to 'Edit', edit_book_path(@book.id), class: 'btn btn-success btn-sm btn-block mb-3 edit' %>
          </td>
          <td>
            <%= link_to 'Destroy', book_path(@book.id), class: 'btn btn-danger btn-sm btn-block mb-3 destroy', method: :delete %>
          </td>
          <% end %>
        </tr>
    </tbody>
  </table>
</div>