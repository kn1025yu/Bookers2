<%= flash[:notice] %>
<%= flash[:alert] %>

<%= render 'books/list', books: @books %>

<div class="col-md-9">
  <h2>Books</h2>
  <table>
   <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
   </thead>

    <tbody>
        <tr>
          <td>
            <%= @book.user.name%>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
          <td>
           <%= link_to 'Edit', edit_book_path(@book.id), class: 'btn btn-success btn-sm btn-block mb-3 edit' %>
          </td>
          <td>
            <%= link_to 'Destroy', book_path(@book.id), class: 'btn btn-danger btn-sm btn-block mb-3 destroy', method: :delete %>
          </td>
          <% end %>
        </tr>
    </tbody>
  </table>
</div>