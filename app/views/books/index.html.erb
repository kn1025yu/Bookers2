
<h1>New book</h1>
<% if @books.errors.any? %>
  <%= @books.errors.count %>errors have occurred
  <% @books.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model: book, local:true do |f| %>
 
  <h4>Title</h4>
  <%= f.text_field :shop_name %>
  <h4>Opinion</h4>
  <%= f.text_area :caption %>
  <%= f.submit 'Create Book' %>
<% end %>