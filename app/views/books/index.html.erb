<%= render 'books/list', book: @book, user: current_user %>

<div class="col-md-9">
  <h2>Books</h2>
  <table class="table-hover table-inverse">
   <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
   </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>